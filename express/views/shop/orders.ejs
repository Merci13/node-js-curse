<body>

   <%- include('../includes/navigation.ejs') %>

   <main>


     <% if(orders.length <= 0){ %>

          <h1>No Orders Yet!</h1>
          <% }else { %>
                    <ul>
                         <% orders.forEach(order => {   %>
                                   <li>
                                       <h1> <%= order._id %></h1>      
                                       <ul>
                                        <!--For Squelize use order.products insted of order.items  -->
                                         <% order.items.forEach(product => {   %> 
                                             
                                             <li> 
                                                  <!-- For Sequelize use product.orderItem.quantity insted of product.quantity -->
                                                  <%= product.title %> (<%= product.quantity %>)
                                             </li>
                                             <% });%>
                                       </ul>
                                   </li>
                              <% });%>

                    </ul>
               <% }%>
   </main>

   <%- include('../includes/end.ejs') %>