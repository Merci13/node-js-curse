   <%- include('../includes/navigation.ejs') %>

   <main class="centered">
        <h1>Detail View</h1>
       <h1> <%= product.title %> </h1>
       <hr>
       <div>
        <div class="image">
            <img src="<%= product.imageUrl %>" alt="<%= product.title %>">

        </div>
       </div>
